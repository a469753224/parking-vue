/* pages/sigup/register/register.wxss */

.login-type {
    font-size: 36rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
    margin: 172rpx 72rpx 72rpx;
}

.login {
    width: 606rpx;
    margin: 0 72rpx;
}

.input {
    height: 90rpx;
    width: 100%;
    line-height: 90rpx;
    border-bottom: 1rpx solid rgba(217, 217, 217, 1);
}

.qr-code {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    border-bottom: 1rpx solid rgba(217, 217, 217, 1);
}

.qr-input{
    display: flex;
    align-items: center;
    height: 90rpx;
    width: 100%;
}

.code {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    width: 180rpx;
    flex-shrink: 0;
    font-size: 26rpx;
    color: rgba(255, 225, 128, 1);
}

.forget {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 26rpx;
    color: rgba(51, 51, 51, 1);
    margin: 48rpx 0 0;
}

.btn-grou {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 80rpx 0 54rpx;
}

.btn-grou text,.btn-grou button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 606rpx;
    height: 96rpx;
    border: none;
    font-size: 28rpx;
    border-radius: 48rpx;
    color: rgba(163, 151, 113, 1);
    background-color: rgba(255, 225, 128, 1);
}

.btn-grou button {
    color: rgb(0,0,0);
    background-color: rgba(255, 201, 26, 1);
}

.btn-grou button::after {
    border: none;
}

.btn-grou text.active {
    color: rgba(43, 34, 24, 1);
    background-color: rgba(255, 201, 26, 1);
}

.aggrent {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
}