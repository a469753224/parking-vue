/* pages/homes/fail/fail.wxss */

.pay-fail {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 68rpx 0 0;
}

.waring {
  width: 64rpx;
  height: 64rpx;
}

.pay-status {
  font-size: 40rpx;
  color: rgba(43, 34, 24, 1);
  margin: 16rpx 0 0;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 148rpx 0 0;
}

.pay-fail-image {
  width: 472rpx;
  height: 288rpx;
}

.pay-desc {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.btn-group {
  position: fixed;
  left: 0;
  bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 310rpx;
  height: 80rpx;
  border-radius: 20rpx;
  border-width: 2rpx;
  border-style: solid;
}

.default {
  font-size: 28rpx;
  color: rgba(255, 179, 26, 1);
  border-color: rgba(255, 201, 26, 1);
}

.active {
  font-size: 28rpx;
  color: rgba(43, 34, 24, 1);
  border-color: rgba(255, 201, 26, 1);
  background-color: rgba(255, 201, 26, 1);
}