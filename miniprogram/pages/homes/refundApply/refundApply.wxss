/* pages/homes/refundApply/refundApply.wxss */
page {
  background-color: rgba(245, 245, 245, 1);
}

.write-describe {
  display: flex;
  flex-direction: column;
  width: 702rpx;
  margin: 24rpx;
  border-radius: 20rpx;
  background-color: rgb(255, 255, 255);
}

.title {
  display: flex;
  align-items: center;
  height: 96rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  padding: 0 24rpx;

}

.label {
  display: flex;
  align-items: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.sign {
  margin: 0 8rpx 0 0;
  color: rgba(255, 83, 26, 1);
}

.input {
  display: flex;
  flex-direction: column;
  width: 654rpx;
  min-height: 240rpx;
  border-radius: 10rpx;
  margin: 0 auto 40rpx;
  box-sizing: border-box;
  padding: 16rpx 24rpx 24rpx;
  background-color: rgba(245, 245, 245, 1);
}

.texterea {
  display: flex;
  flex-direction: column;
  margin: 0 0 8rpx;
}

.texterea text {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 26rpx;
  color: rgba(204, 204, 204, 1);
}

.texterea-content {
  height: 200rpx;
  box-sizing: border-box;
}

.voucher {
  display: flex;
  align-items: center;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 128rpx;
  height: 128rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: rgba(153, 153, 153, 1);
  border: 2rpx solid rgba(230, 230, 230, 1);
}

.camera {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.voucher-warrp {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  margin: 0 34rpx 0 0;
  border-radius: 10rpx;
  background-color: rgb(255, 255, 255);
  border: 2rpx solid rgba(230, 230, 230, 1);
}

.close {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  border-radius: 50%;
  background-color: rgb(255,255,255);
}

.voucher-image {
  width: 128rpx;
  height: 128rpx;
}

.btm-group {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100vw;
  height: 98rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
}

.money {
  display: flex;
  align-items: baseline;
  color: rgba(51, 51, 51, 1);
}

.rmb {
  font-size: 28rpx;
}

.number {
  font-size: 48rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: rgba(44, 34, 24, 1);
  border-radius: 40rpx;
  background-color: rgba(255, 201, 26, 1);
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.3);
}

.upload-type {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  width: 606rpx;
  height: 224rpx;
  box-sizing: border-box;
  background-color: rgb(255,255,255);
}

.upload-cell {
  display: flex;
  align-items: center;
  width: 100%;
  height: 112rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.upload-cell:first-child {
  border-bottom: 2rpx solid RGBA(192, 192, 192, 1);
}

.upload-cell image {
  width: 48rpx;
  height: 48rpx;
}