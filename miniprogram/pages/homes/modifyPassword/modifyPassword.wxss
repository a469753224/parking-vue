/* pages/homes/modifyPassword/modifyPassword.wxss */

page {
  background-color: rgba(245, 245, 245, 1);
}

.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
}

.tips text:nth-child(1) {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  margin: 0 0 8rpx;
}

.tips text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.cell {
  display: flex;
  align-items: center;
  height: 96rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background-color: rgb(255,255,255);
}

.label {
  display: flex;
  align-items: center;
  height: 96rpx;
  width: 200rpx;
  color: rgba(51, 51, 51, 1);
}

.cell-group {
  margin: 24rpx 0 0;
}

.orange {
  font-size: 26rpx;
  color: rgba(255, 225, 128, 1);
}

.btn-group {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 96rpx;
  margin: 80rpx 0 0;
}

.btn-group text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 606rpx;
  height: 96rpx;
  font-size: 32rpx;
  border-radius: 96rpx;
  color: rgba(163, 151, 113, 1);
  background-color: rgba(255, 225, 128, 1);
}

.btn-group text.active {
  color: rgba(43, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}

page .van-count-down {
  font-size: 26rpx;
  flex-shrink: 0;
  color: rgba(255, 225, 128, 1);
}