<!--pages/homes/modifyPassword/modifyPassword.wxml-->
<view class="tips">
    <text>我们已发送验证码到您的手机号</text>
    <text>152******32</text>
</view>

<view class="cell">
    <text class="label">手机验证码</text>
    <input type="Number" placeholder="请输入验证码" placeholder-style="color:rgba(204, 204, 204, 1)"/>
    <text class="orange" wx:if="{{!codeFlag}}" bindtap="getCode">获取验证码</text>
    <van-count-down class="orange" wx:else time="{{time}}" format="ss s后可重新获取'"/>
</view>

<view class="cell-group">
    <view class="cell">
        <text class="label">支付密码</text>
        <input type="text" placeholder="请设置支付密码" placeholder-style="color:rgba(204, 204, 204, 1)"/>
    </view>
    <view class="cell">
        <text class="label">确认密码</text>
        <input type="text" placeholder="请确认支付密码" placeholder-style="color:rgba(204, 204, 204, 1)"/>
    </view>
</view>

<view class="btn-group">
    <text class="active">确定</text>
</view>
