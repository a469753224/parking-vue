/* pages/homes/pay/pay.wxss */

page {
  padding: 0 0 98rpx;
  background-color: rgba(245, 245, 245, 1);
}

.header {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 0;
  display: flex;
  width: 100vw;
  height: 272rpx;
}

.header::after {
  width: 140vw;
  height: 272rpx;
  position: absolute;
  left: -20%;
  top: 0;
  content: '';
  border-radius: 0 0 50% 50%;
  background-image: linear-gradient(rgba(255, 217, 26, 1), rgba(255, 234, 128, 1));
}

.title {
  position: relative;
  z-index: 77;
  font-size: 26rpx;
  color: rgba(44, 34, 24, 1);
  margin: 58rpx 24rpx 24rpx;
}

.atcr {
  position: relative;
  z-index: 7;
  width: 702rpx;
  height: 40rpx;
  margin: 0 auto -20rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
  border: 6rpx solid rgba(255, 179, 26, 1);
}

.pay-content {
  position: relative;
  z-index: 77;
  display: flex;
  flex-direction: column;
  width: 670rpx;
  margin: 0 auto;
  border-radius: 0 0 20rpx 20rpx;
  background-color: rgb(255, 255, 255);
}

.total-time-title {
  font-size: 26rpx;
  padding: 40rpx 48rpx 8rpx;
  color: rgba(153, 153, 153, 1);
}

.total-time {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: 700;
  padding: 0 48rpx;
}

.time {
  margin: 32rpx 48rpx;
}

.time-item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 8rpx 0;
  padding: 0 0 0 30rpx;
}

.time-item::before {
  position: absolute;
  top: 50%;
  left: 0;
  content: " ";
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin: -8rpx 0 0;
  background-color: rgba(255, 201, 26, 1);
}

.time-item.active::before {
  position: absolute;
  top: 50%;
  left: 0;
  content: " ";
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin: -8rpx 0 0 2rpx;
  background-color: rgba(255, 83, 26, 1);
}

.time-item text {
  display: flex;
  align-items: center;
  width: 50%;
}

.time-item text:nth-child(1) {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.time-item text:nth-child(2) {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.park-info {
  display: flex;
  flex-direction: column;
  width: 622rpx;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  margin: 0 24rpx;
  box-sizing: border-box;
  background-color: rgba(245, 245, 245, 1);
}

.park-item {
  display: flex;
  padding: 8rpx 0;
  align-items: flex-start;
  font-size: 30rpx;
}

.park-item text:nth-child(1) {
  flex-shrink: 0;
  margin: 0 16rpx 0 0;
  color: rgba(153, 153, 153, 1);
}

.park-item text:nth-child(2) {
  color: rgba(51, 51, 51, 1);
}

.line {
  position: relative;
  display: block;
  width: 100%;
  height: 42rpx;
  margin: 8rpx auto;
}

.line text {
  position: absolute;
  top: 50%;
  left: 35rpx;
  display: block;
  width: 610rpx;
  height: 2rpx;
  border-top: 2rpx dashed rgba(245, 245, 245, 1);
}

.line::before {
  position: absolute;
  top: 50%;
  left: 0;
  content: " ";
  height: 24rpx;
  width: 12rpx;
  margin: -12rpx 0 0;
  border-radius: 0 12rpx 12rpx 0;
  background-color: rgba(245, 245, 245, 1);
}

.line::after {
  position: absolute;
  top: 50%;
  right: 0;
  content: " ";
  height: 24rpx;
  width: 12rpx;
  margin: -12rpx 0 0;
  border-radius: 12rpx 0 0 12rpx;
  background-color: rgba(245, 245, 245, 1);
}

.price {
  padding: 0 24rpx;
  line-height: 36rpx;
}

.price-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8rpx 0 0;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.number {
  color: rgba(51, 51, 51, 1);
}

.pay-total {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  font-size: 26rpx;
  margin: 54rpx 24rpx 24rpx;
  color: rgba(153, 153, 153, 1);
}

.total-price-sign {
  font-size: 28rpx;
  color: rgba(255, 179, 26, 1);
}

.total-price {
  font-size: 48rpx;
  color: rgba(255, 179, 26, 1);
}

.total-price {
  display: flex;
  align-items: baseline;
}

.service {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 622rpx;
  height: 124rpx;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  margin: 0 auto 40rpx;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  border: 2rpx solid rgba(245, 245, 245, 1);
}

.service-image {
  width: 48rpx;
  height: 48rpx;
}

.customer-service {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: rgba(51, 51, 51, 1);
}

.pay-info {
  display: flex;
  flex-direction: column;
  width: 670rpx;
  height: 212rpx;
  border-radius: 20rpx;
  margin: 24rpx auto;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
}

.pay-info-title {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
}

.pay-info-item {
  font-size: 26rpx;
  margin: 16rpx 0 0;
  color: rgba(153, 153, 153, 1);
}

.mar-l {
  margin: 0 0 0 16rpx;
}

.btn-group {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100vw;
  height: 98rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
}

.bold {
  font-weight: 700;
}

.pay-number {
  font-size: 48rpx;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 777;
  display: flex;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.3);
}

.pay-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 16rpx 0 0;
}

.pay-way {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: auto;
  animation-name: pay;
  animation-duration: .25s;
  border-radius: 20rpx 20rpx 0 0;
  background-color: rgb(255,255,255);
}

@keyframes pay {
  0% {
      height: 0;
  }
  100% {
      height: 360rpx;
  }
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  width: 654rpx;
  margin: 0 auto;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(245, 245, 245, 1);
}

.cell-title {
  display: flex;
  align-items: center;
}

.pay-way-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  width: 100vw;
  font-size: 32rpx;
  color: rgba(44, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}
