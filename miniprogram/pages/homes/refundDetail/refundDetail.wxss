page {
	background-color: rgba(245, 245, 245, 1);
}

.status {
	display: flex;
	flex-direction: column;
	justify-content: center;
	width: 100vw;
	height: 240rpx;
	padding: 0 24rpx;
	box-sizing: border-box;
	background-color: rgba(255, 217, 26, 1);
}

.status-desc {
	font-size: 30rpx;
	margin: 0 0 8rpx;
}

.status-tips {
	font-size: 26rpx;
}

.order-info {
	display: flex;
	flex-direction: column;
	width: 702rpx;
	margin: 24rpx;
	border-radius: 20rpx;
	padding: 0 0 36rpx;
	background-color: rgb(255, 255, 255);
}

.title {
	display: flex;
	align-items: center;
	height: 96rpx;
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
	margin: 0 24rpx 8rpx;
	border-bottom: 2rpx solid rgba(245, 245, 245, 1);
}

.cell {
	display: flex;
	align-items: center;
	margin: 16rpx 24rpx;
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
}

.label {
	margin: 0 16rpx 0 0;
}

.btn-group {
	position: fixed;
	left: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	width: 100vw;
	height: 98rpx;
	padding: 0 40rpx;
	box-sizing: border-box;
	background-color: rgb(255, 255, 255);
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 240rpx;
	height: 80rpx;
	font-size: 28rpx;
	border-radius: 40rpx;
	color: rgba(51, 51, 51, 1);
	background-color: rgba(245, 245, 245, 1);
}