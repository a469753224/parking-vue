/* pages/scan/scan.wxss */

.scan {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-self: center;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  /* background-image: linear-gradient(90deg, rgba(180, 180, 180, 0.15) 10%, rgba(0, 0, 0, 0) 10%),linear-gradient(rgba(180, 180, 180, 0.15) 10%, rgba(0, 0, 0, 0) 10%); background-size: 30rpx 30rpx; */
}

.camera-warp {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 448rpx;
  height: 448rpx;
  padding: 10rpx 6rpx;
  margin: 224rpx auto 32rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.camera {
  width: 448rpx;
  height: 448rpx;
  padding: 4rpx;
}

.scan-tips {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
}

.angle {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  z-index: 1;
}

.angle_1 {
  left: 0;
  top: 0;
  border-top: 4rpx solid rgba(129, 227, 165, 1);
  border-left: 4rpx solid rgba(129, 227, 165, 1);
}

.angle_2 {
  right: 0;
  top: 0;
  border-top: 4rpx solid rgba(129, 227, 165, 1);
  border-right: 4rpx solid rgba(129, 227, 165, 1);
}

.angle_3 {
  left: 0;
  bottom: 0;
  border-left: 4rpx solid rgba(129, 227, 165, 1);
  border-bottom: 4rpx solid rgba(129, 227, 165, 1);
}

.angle_4 {
  right: 0;
  bottom: 0;
  border-right: 4rpx solid rgba(129, 227, 165, 1);
  border-bottom: 4rpx solid rgba(129, 227, 165, 1);
}

.scan-animation {
  position: absolute;
  top: 0;
  left: 0;
  width: 448rpx;
  height: 4rpx;
  z-index: 7;
  border-radius: 50%;
  animation: scans 6s linear infinite;
  background-color: rgba(129, 227, 165, 1);
}

@keyframes scans {
  0% {
      transform: translateY(0);
  }

  50% {
      transform: translateY(448rpx);
  }

  100% {
      transform: translateY(0);
  }
}

.torch {
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  width: 112rpx;
  height: 112rpx;
  margin: 0 0 0 -56rpx;
}