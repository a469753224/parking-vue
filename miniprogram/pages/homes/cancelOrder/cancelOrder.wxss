/* pages/homes/cancelOrder/cancelOrder.wxss */

.order-cancel {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}

.btn-group {
  position: fixed;
  bottom: 48rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
}

.right {
  width: 64rpx;
  height: 64rpx;
  margin: 272rpx 0 0;
}

.title {
  font-size: 40rpx;
  color: rgba(51, 51, 51, 1);
  margin: 24rpx 0 96rpx;
}

.warning {
  position: absolute;
  top: -48rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  font-size: 26rpx;
  margin: 0 0 16rpx;
  color: rgba(255, 83, 26, 1);
}

.tips {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.btn-group text,.btn-group picker {
  display: flex;
  align-items: center;
  justify-content: center;
  width:  702rpx;
  height: 96rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: rgba(43, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}