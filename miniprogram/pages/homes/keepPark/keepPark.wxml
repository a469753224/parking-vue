<view class="cell-warp">
    <view class="cell"><text>停车时间</text><text class="grey">{{beTime}}</text></view>
</view>

<view class="cell-warp">
    <picker mode="time" value="{{enTime}}" bindchange="bindTimeChange" start="{{beTime}}">
        <view class="cell"><text>取车时间</text>
            <view class="arrow-bar grey-2"><text>{{enTime}}</text>
                <van-icon name="arrow" size="28rpx" color="rgba(153, 153, 153, 1)" />
            </view>
        </view>
    </picker>
</view>

