/* pages/user/user.wxss */

page {
  width: 100vw;
  background-color: rgba(245, 245, 245, 1);
}

.header {
  background-color: rgb(255, 255, 255);
}

.user-card {
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100vw;
  height: 350rpx;
  overflow-x: hidden;
}

.user-card:after {
  width: 180%;
  height: 350rpx;
  position: absolute;
  left: -40%;
  top: -1;
  z-index: 0;
  content: '';
  border-radius: 0 0 50% 50%;
  background-color: rgba(255, 222, 60, 1);
}

.avatar {
  position: relative;
  z-index: 77;
  width: 152rpx;
  height: 152rpx;
  object-fit: cover;
  margin: 102rpx auto 4rpx;
}

.user-name {
  position: relative;
  z-index: 77;
  font-size: 30rpx;
  color: rgba(43, 34, 24, 1);
  margin: 4 0 0;
}

.grid {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 24rpx;
  background-color: rgb(255, 255, 255);
}

.grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 234rpx;
  height: 166rpx;
}

.number {
  font-size: 32rpx;
  color: rgba(255, 83, 26, 1);
}

.desc {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
}

.toolbars {
  margin: 24rpx 0 0;
  background-color: rgb(255, 255, 255);
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 702rpx;
  height: 96rpx;
  margin: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(245, 245, 245, 1);
}

.cell-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.title-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 16rpx 0 0;
}

.banner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 702rpx;
  height: 120rpx;
  margin: 24rpx;
}

.banner-swiper {
  width: 702rpx;
  height: 120rpx;
  object-fit: cover;
}

.band-btn {
  display: flex;
	align-items: center;
	justify-content: center;
	width: 268rpx;
	height: 80rpx;
	border-radius: 10rpx;
	font-size: 28rpx;
	color: rgba(44, 34, 24, 1);
	background-color: rgba(255, 201, 26, 1);
}

.band-btn::after {
  border: none;
}