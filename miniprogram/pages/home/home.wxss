/* pages/home/home.wxss */


.map {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  background-color: rgb(154,206,254);
}

.map-view {
  width: 100%;
  height: 100%;
}

.van-empty__description {
  color: rgb(255,255,255) !important;
}

.banner {
  position: relative;
  width: 702rpx;
  height: 140rpx;
  margin: 24rpx auto;
  z-index: 7;
}

.banner image {
  width: 702rpx;
  height: 140rpx;
  object-fit: cover;
  border-radius: 20rpx;
}

.btom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  z-index: 7;
}

.has-order {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 702rpx;
  height: 80rpx;   
  border-radius: 20rpx; 
  margin: 0 auto 17rpx;
  color: rgba(121, 212, 154, 1);
  background-color: rgba(235, 255, 242, 1);    
}

.search-warp {
  width: 702rpx;
  margin: 0 auto;
  border-radius: 20rpx 20rpx 0 0;
  background-color: rgb(2255,255,255);
}

.search {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 702rpx;
  height: 120rpx;
}

.search image {
  width: 41rpx;
  height: 42rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.search input {
  width: 100%;
  height: 120rpx;
  margin: 0 0 0 25rpx;
  color: rgba(51, 51, 51, 1);
}

.btn-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 24rpx;
  height: 184rpx;
  border-top: 1rpx solid rgba(245, 245, 245, 1);
}

.btn-group .reserve {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  color: rgba(121, 212, 154, 1);
  border: 1rpx solid rgba(121, 212, 154, 1);
  background-color: rgba(235, 255, 242, 1);
}

.btn-group .scan {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  color: rgba(44, 34, 24, 1);
  background-color: rgba(255, 201, 25, 1);
}

.scan-image {
  width: 48rpx;
  height: 48rpx;
  margin: 0 13rpx 0 0;
  flex-shrink: 0;
}

.band-btn {
  display: flex;
	align-items: center;
	justify-content: center;
	width: 268rpx;
	height: 80rpx;
	border-radius: 10rpx;
	font-size: 28rpx;
	color: rgba(44, 34, 24, 1);
	background-color: rgba(255, 201, 26, 1);
}