page {
	background-color: rgba(245, 245, 245, 1);
}

.cell-group {
	margin: 24rpx 0 0;
}

.cell {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 24rpx;
	height: 96rpx;
	box-sizing: border-box;
	background-color: rgb(255,255,255);
}

.title {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.set-btn {
	display: flex;
	align-items: center;
}

.set-desc{
	display: flex;
	align-items: center;
	margin: 0 18rpx 0 0;
	color: rgba(102, 102, 102, 1);
}

.crow-left {
	width: 14rpx;
	height: 26rpx;
}

.btn-group {
	position: fixed;
	bottom: 48rpx;
	left: 0;
	width: 100%;
	height: 96rpx;
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 702rpx;
	height: 96rpx;
	margin: 0 24rpx;
	font-size: 32rpx;
	color: rgba(43, 34, 24, 1);
	border-radius: 10rpx;
	background-color: rgba(255, 201, 26, 1);
}