page {
	background-color: rgba(245, 245, 245, 1);
}

.title {
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 26rpx;
	color: rgba(51, 51, 51, 1);
	margin: 24rpx 0 0;
}

.btn-group {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	margin: 528rpx 0 0;
	padding: 36rpx 0 0;
}

.tips-warrp {
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
}

.tips {
	font-size: 26rpx;
	color: rgba(255, 83, 26, 1);
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 260rpx;
	height: 260rpx;
	font-size: 32rpx;
	border-radius: 50%;
	margin: 20rpx 0 0;
	color: rgba(43, 34, 24, 1);
	background-color: rgba(255, 201, 26, 1);
	box-shadow: 0 4rpx 20rpx rgba(255, 179, 26, 1);
}

.btn.disable {
	color: rgba(163, 152, 113, 1);
	background-color: rgba(255, 225, 128, 1);
	box-shadow: 0 4rpx 20rpx rgba(255, 179, 26, .5);
}