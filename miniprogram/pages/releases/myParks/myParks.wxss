/* pages/releases/myApply/myApply.wxss */

page {
	background-color: rgba(245, 245, 245, 1);
}

.header {
	padding: 24rpx;
	box-sizing: border-box;
}

.title-group {
	display: flex;
	align-items: flex-start;
	justify-content: space-between;
}

.subtitle {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.title {
	font-size: 40rpx;
	color: rgba(51, 51, 51, 1);
	margin: 0 0 8rpx;
}

.break {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.step {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
}

.my-park {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 192rpx;
	height: 56rpx;
	border-radius: 28rpx;
	font-size: 26rpx;
	color: rgba(51, 51, 51, 1);
	background-color: rgba(230, 230, 230, 1);
}

.card {
	width: 702rpx;
	height: auto;
	margin: 0 24rpx 24rpx;
	border-radius: 20rpx;
	padding: 0 0 38rpx;
	background-color: rgb(255, 255, 255);
}

.status-bar {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 96rpx;
	border-radius: 20rpx 20rpx 0 0;
	background-color: rgba(255, 201, 26, 1);
}

.status-bar.used{
	background-color: rgba(255, 83, 26, 1);
}

.status-bar .title-status {
	position: absolute;
	right: 24rpx;
	top: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 48rpx;
	font-size: 26rpx;
	color: rgba(255, 179, 26, 1);
	padding: 0 24rpx;
	border-radius: 0 0 20rpx 20rpx;
	background-color: rgba(255, 255, 255, 1);
}

.status-bar.used .title-status{
	color: rgba(255, 83, 26, 1);
}

.park-name {
	font-size: 32rpx;
	color: rgba(43, 34, 24, 1);
	padding: 0 24rpx;
}

.status-group {
	display: flex;
	flex-direction: column;
	padding: 0 24rpx 0 0;
	height: 96rpx;
	justify-content: flex-end;
}

.profit {
	font-size: 26rpx;
	color: rgba(43, 34, 24, 1);
	padding: 8rpx 0;
}

.status-bar.used .profit,.status-bar.used .park-name{
	color: rgb(255,255,255);
}

.item-row {
	display: flex;
	padding: 18rpx 24rpx;
}

.row {
	display: flex;
	flex-direction: column;
	width: 50%;
}

.label {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
	margin: 0 0 8rpx;
}

.flie {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.address {
	display: flex;
	flex-direction: column;
	padding: 18rpx 24rpx 64rpx;
}


.tips {
	padding: 0 24rpx;
	font-size: 26rpx;
	margin: 0 0 72rpx;
	color: rgba(255, 83, 26, 1);
}

.set-time {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 40rpx 24rpx 36rpx;
}

.open-time {
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.set-btn {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
}

.toolbar {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 120rpx;
	padding: 0 24rpx;
}

.work-time {
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	height: 120rpx;
}

.desc {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
	margin: 0 0 8rpx;
}

.time-slot {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.unlock {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 38rpx 24rpx 0;

}

.unlock-park {
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.crow-left {
	width: 14rpx;
	height: 26rpx;
}