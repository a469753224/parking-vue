/* pages/releases/apply/apply.wxss */

.fild {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  width: 702rpx;
  margin: 0 auto;
  padding: 32rpx 0 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(217, 217, 217, 1);
}

input {
  width: 100%;
  font-size: 30rpx;
  color: rgba(51,51,51,1);
}

.placeholder {
  font-size: 30rpx;
  color: rgba(204, 204, 204, 1);
}

.right {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.position {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: rgba(255, 179, 26, 1);
  background-color: rgba(255, 201, 26, 0.15);
}

.position-icon {
  width: 48rpx;
  height: 48rpx;
} 

.btn-group {
  position: fixed;
  bottom: 48rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 96rpx;
}

.btn-group text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 702rpx;
  height: 96rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: rgba(163, 151, 113, 1);
  background-color: rgba(255, 225, 128, 1);
}

.btn-group text.active {
  color: rgba(43, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}