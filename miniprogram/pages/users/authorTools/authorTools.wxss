.author-tools {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24rpx;
    margin: 24rpx 0 0;
    background-color: rgb(255,255,255);
}

.tools-image {
    width: 48rpx;
    height: 48rpx;
    margin: 0 12rpx 0 0;
}

.view {
    display: flex;
    align-items: center;
}

.pay-text {
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
}

.right {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
}

.open {
    font-size: 28rpx;
    color: rgba(72, 199, 139, 1);
}