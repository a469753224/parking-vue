.money {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 702rpx;
    height: 160rpx;
    margin: 0 auto 40rpx;
    border-bottom: 2rpx solid rgba(230, 230, 230, 1);
}

.label {
    font-size: 30rpx;
    color: rgba(153, 153, 153, 1);
}

.number {
    font-size: 48rpx;
    color: rgba(51, 51, 51, 1);
}

.content {
    padding: 0 24rpx;
}

.content view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 0 24rpx;
}

.content text {
    font-size: 30rpx;
}

.content .subtitle {
    color: rgba(153, 153, 153, 1);
}

.content .value {
    color: rgba(51, 51, 51, 1);
}