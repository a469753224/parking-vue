/* pages/users/balance/balance.wxss */

.nav-tab {
	width: 100vw;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
}

.nav-tab text {
	position: relative;
	margin: 0 24rpx;
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.nav-tab text.active::after {
	position: absolute;
	left: 0;
	bottom: -16rpx;
	content: " ";
	width: 100%;
	height: 4rpx;
	background-color: rgba(255, 201, 25, 1);
}

.nav-tabs {
	width: 100vw;
	height: 92rpx;
	line-height: 92rpx;
}

.nav-tabs text {
	position: relative;
	margin: 0 24rpx;
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.nav-tabs text.active::after {
	position: absolute;
	left: 0;
	bottom: -26rpx;
	content: " ";
	width: 100%;
	height: 4rpx;
	background-color: rgba(255, 201, 25, 1);
}

.card {
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
	width: 702rpx;
	height: 314rpx;
	margin: 24rpx auto 77rpx;
	border-radius: 20rpx;
	background-color: rgba(255, 217, 26, 1);
}

.card-rmb {
	font-size: 26rpx;
	color: rgba(43, 34, 24, 1);
}

.card-money {
	font-size: 48rpx;
	color: rgba(43, 34, 24, 1);
	font-weight: 700;
	margin: 8rpx 0 44rpx;
}

.btn-group {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0 45rpx;
	width: 100%;
	height: 80rpx;
	box-sizing: border-box;
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 252rpx;
	height: 80rpx;
	font-size: 28rpx;
	border-radius: 40rpx;
	margin: 0 27rpx;
	border: 2rpx solid rgba(43, 34, 24, 1);
}

.recharge {
	background-color: rgb(255, 255, 255);
	border-color: rgb(255, 255, 255);
}

.tab-top {
	border-top: 2rpx solid rgba(230, 230, 230, 1);
}

.cell {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 702rpx;
	height: 134rpx;
	margin: 0 24rpx;
	padding: 24rpx 0;
	box-sizing: border-box;
	border-bottom: 2rpx solid rgba(230, 230, 230, 1);
}

.left {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.title {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	margin: 0 0 8rpx;
}

.date {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
}

.sign {
	font-size: 32rpx;
	color: rgba(255, 179, 26, 1);
}

.right {
	display: flex;
	align-items: center;
}

.money {
	font-size: 32rpx;
	color: rgba(255, 179, 26, 1);
	margin: 0 16rpx 0 0;
}

.right .income {
	color: rgba(51, 51, 51, 1);
}