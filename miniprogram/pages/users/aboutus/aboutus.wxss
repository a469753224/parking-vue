/* pages/users/aboutus/aboutus.wxss */

page {
	background-color: rgba(245, 245, 245, 1);
}

.version-info {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 62rpx 0 0;
}

.version-image {
	width: 176rpx;
	height: 176rpx;
	object-fit: cover;
}

.version-name {
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
	margin: 16rpx 0 0;
}

.version-no {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
	line-height: 36rpx;
}

.content {
	margin: 48rpx 80rpx 0;
}

.paragraph {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	line-height: 44rpx;
}

.paragraph text {
	display: block;
	margin: 0 0 40rpx;
}

.phone {
	display: flex;
	align-items: center;
	margin: 0 80rpx;
	font-size: 30rpx;
	color: rgba(255, 179, 26, 1);
}