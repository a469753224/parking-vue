/* pages/users/bindhone/bindphone.wxss */
.title {
  display: flex;
  font-size: 36rpx;
  color: rgba(51, 51, 51, 1);
  margin: 132rpx 72rpx 16rpx;
}

.desc {
  display: flex;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  margin: 0 72rpx;
}

form {
  display: flex;
  flex-direction: column;
  margin: 72rpx 0 0;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 606rpx;
  margin: 24rpx 72rpx 0;
  border-bottom: 1rpx solid rgba(217, 217, 217, 1);
}

input {
  display: flex;
  height: 90rpx;
  width: 100%;
  font-size: 30rpx;
}

.code {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  flex-shrink: 0;
  color: rgba(255, 225, 128, 1);
}

.btn-group {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 80rpx 0 0;
}

.btn-group text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 606rpx;
  height: 96rpx;
  font-size: 32rpx;
  border-radius: 48rpx;
  color: rgba(163, 151, 113, 1);
  background-color: rgba(255, 225, 128, 1);
}

.btn-group text.active {
  color: rgba(43, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}