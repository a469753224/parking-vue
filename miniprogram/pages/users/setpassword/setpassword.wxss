/* pages/setpassword/setpassword.wxss */

page {
  background-color: rgba(245, 245, 245, 1);
}

.group {
  margin: 24rpx 0 0;
  background-color: rgb(255, 255, 255);
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  width: 702rpx;
  margin: 0 auto;
  padding: 28rpx 0;
  box-sizing: border-box;
}

.btm {
  border-bottom: 1rpx solid rgba(245, 245, 245, 1);
}

.label {
  width: 200rpx;
  font-size: 30rpx;
  flex-shrink: 0;
  color: rgba(51, 51, 51, 1);
}

input {
  width: 100%;
}

.get-code {
  font-size: 26rpx;
  flex-shrink: 0;
  color: rgba(255, 225, 128, 1);
}

.btn-group {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 98rpx 72rpx 0;
}

.btn-group text {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  width: 606rpx;
  height: 96rpx;
  border-radius: 48rpx;
  color: rgba(163, 151, 113, 1);
  background-color: rgba(255, 225, 128, 1);
}

.btn-group text.active {
  color: rgba(43, 34, 24, 1);
  background-color: rgba(255, 201, 26, 1);
}