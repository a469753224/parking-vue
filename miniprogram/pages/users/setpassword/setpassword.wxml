<!--设置登录密码-->

<form>

<view class="group">
    <view class="cell btm">
        <text class="label">手机号</text>
        <input type="text" value="{{phone}}" placeholder="请输入手机号"/>
    </view>
    <view class="cell">
        <text class="label">请输入验证码</text>
        <input type="text" value="{{code}}" placeholder="请输入手机号"/>
        <text class="get-code">获取验证码</text>
    </view>
</view>

<view class="group">
    <view class="cell btm">
        <text class="label">登录密码</text>
        <input type="text" value="{{password1}}" placeholder="6-16位密码(数字、字母组合)"/>
    </view>
    <view class="cell">
        <text class="label">确认密码</text>
        <input type="text" value="{{password2}}" placeholder="6-16位密码(数字、字母组合)"/>
    </view>
</view>

<view class="btn-group">
    <text class="{{phone&&code&&password1&&password2?'active':''}}">确定</text>
</view>

</form>