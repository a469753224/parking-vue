.card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 702rpx;
  height: 176rpx;
  margin: 0 auto;
  padding: 40rpx 32rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
}

.title {
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
}

.btn-mini {
  padding: 0 12rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 0 0;
  color: rgba(255, 179, 26, 1);
  background-color: rgba(255, 250, 231, 1);
}

.right {
  display: flex;
  align-items: baseline;
}

.number {
  font-size: 48rpx;
  color: rgba(51, 51, 51, 1);
}

.sign {
  font-size: 28rpx;
  margin: 0 0 0 8rpx;
  color: rgba(51, 51, 51, 1);
}