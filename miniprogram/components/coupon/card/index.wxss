.card {
	position: relative;
	width: 702rpx;
	height: 352rpx;
	border-radius: 10rpx;
	padding: 24rpx;
	box-sizing: border-box;
	margin: 0 0 24rpx;
	background-color: rgb(255,255,255);
}

.title {
	display: flex;
	align-items: center;
	width: 100%;
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	margin: 8rpx 0 30rpx;
}

.received {
	position: absolute;
	top: 0;
	right: 0;
	width: 128rpx;
	height: 128rpx;
}

.card-info {
	position: relative;
	height: 224rpx;
	width: 100%;
	border-radius: 10rpx;
}

.grey .card-info {
	background-color: rgba(245, 245, 245, 1);
}

.pay-type {
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 152rpx;
	height: 32rpx;
	font-size: 22rpx;
	color: rgba(255, 179, 26, 1);
	border-radius: 10rpx 0 10rpx 0;
	background-color: rgba(255, 236, 190, 1);
}

.yellow .pay-type {
	color: rgba(255, 179, 26, 1);
	background-color: rgba(255, 236, 190, 1);
}

.green .pay-type {
	color: rgba(72, 199, 139, 1);
	background-color: rgba(182, 245, 214, 1) !important;
}

.grey .pay-type {
	color: rgba(255, 255, 255, 1);
	background-color: rgba(153, 153, 153, 1) !important;
}


.coin-back {
	position: absolute;
	right: 0;
	top: 0;
	width: 216rpx;
	height: 148rpx;
	object-fit: cover;
}

.tools {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 48rpx 24rpx 24rpx;
	box-sizing: border-box;
}

.date-info {
	display: flex;
	flex-direction: column;
	/* margin: 0 94rpx 0 96rpx; */
}

.price {
	display: flex;
	align-items: baseline;
}

.sign {
	font-size: 24rpx;
	color: rgba(255, 83, 26, 1);
	font-weight: bold;
}

.grey .sign {
	color: rgba(153, 153, 153, 1);
}

.number {
	font-size: 48rpx;
	color: rgba(255, 83, 26, 1);
	font-weight: bold;
}

.grey .number {
	color: rgba(153, 153, 153, 1);
}

.desc {
	font-size: 30rpx;
	margin: 0 0 8rpx;
}

.yellow .desc {
	color: rgba(255, 179, 26, 1);
}

.green .desc {
	color: rgba(72, 199, 139, 1);
}

.grey .desc {
	color: rgba(153, 153, 153, 1);
}

.date {
	font-size: 22rpx;
}

.yellow .date {
	color: rgba(255, 179, 26, 1);
}

.green .date {
	color: rgba(72, 199, 139, 1);
}

.grey .date {
	color: rgba(153, 153, 153, 1);
}

.btn-group {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 144rpx;
	height: 56rpx;
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 144rpx;
	height: 56rpx;
	font-size: 26rpx;
	border-radius: 28rpx;
	margin: 10rpx 0 0;
}

.icon-used {
	position: absolute;
	right: 8rpx;
	top: 16rpx;
	width: 128rpx;
	height: 128rpx;	
	object-fit: cover;
}

.yellow .btn {
	color: rgba(43, 34, 24, 1);
	background-color: rgba(255, 202, 26, 1);
}

.green .btn {
	color: rgba(255, 255, 255, 1);
	background-color: rgba(72, 199, 139, 1);
}

.address {
	font-size: 24rpx;
	padding: 18rpx 24rpx 0;
	box-sizing: border-box;
}

.yellow .address {
	color: rgba(255, 179, 26, 1);
	border-top: 2rpx solid rgba(255, 236, 190, 1);
}

.green .address {
	color: rgba(72, 199, 139, 1);
	border-top: 2rpx solid rgba(182, 245, 214, 1);
}

.grey .address {
	color: rgba(153, 153, 153, 1);
	border-top: 2rpx solid rgba(230, 230, 230, 1);
}