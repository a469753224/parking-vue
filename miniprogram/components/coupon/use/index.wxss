@import './base64.wxss';

page {
	background-color: rgba(245, 245, 245, 1);
}

.container {
	width: 654rpx;
	margin: 24rpx auto 0;
	border-radius: 20rpx;
	background-color: rgb(255,255,255);
}

.header {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 654rpx;
	height: 224rpx;
}

.title {
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 40rpx;
	color: rgba(43, 34, 24, 1);
	margin: 24rpx 0;
}

.green .title {
	color: rgb(255,255,255);
}

.date-type {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	padding: 0 24rpx;
	font-size: 26rpx;
	box-sizing: border-box;
	color: rgba(43, 34, 24, 1);
}

.green .date-type {
	color: rgb(255,255,255);
}

.content {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 100%;
	height: 406rpx;
}

.number {
	font-size: 80rpx;
	color: rgba(255, 83, 26, 1);
}

.green .number {
	color: rgba(72, 199, 139, 1);
}

.discount {
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.currency {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
}

.tips {
	display: flex;
	flex-direction: column;
	padding: 24rpx;
}

.tips-title {
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	margin: 0 0 8rpx;
}

.li {
	font-size: 26rpx;
	color: rgba(153, 153, 153, 1);
	margin: 0 0 8rpx;
}

.label {
	margin: 0 10rpx 0 0;
}