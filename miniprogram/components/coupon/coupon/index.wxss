
.overlay {
	position: fixed;
	top: 0;
	left: 0;
	z-index: 7777;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100vw;
	height: 100vh;
	background-color: rgba(0,0,0,.7);
}

.warrp {
	position: relative;
}

.image {
	width: 520rpx;
	height: 640rpx;
}

.title {
	display: block;
	width: 356rpx;
	height: 72rpx;
	margin: 61rpx auto 92rpx;
}

.text {
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 22rpx;
	margin: 0 0 36rpx;
	color: rgb(255,255,255);
}

.item {
	display: flex;
	align-items: center;
	margin: 0 auto;
}

.left {
	display: flex;
	align-items: center;
	width: 168rpx;
	height: 118rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
}

.left view {
	display: flex;
	align-items: baseline;
}

.right {
	display: flex;
	flex-direction: column;
	padding: 0 30rpx;
	font-size: 28rpx;
	color: rgba(51, 51, 51, 1);
}

.number {
	font-size: 48rpx;
	color: rgba(255, 83, 26, 1);
}

.sign {
	font-size: 24rpx;
	color: rgba(255, 83, 26, 1);
}

.orange {
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 8rpx;
	padding: 5rpx 0;
	margin: 10rpx 0 0;
	font-size: 20rpx;
	color: rgba(255, 83, 26, 1);
	border: 2rpx solid rgba(255, 83, 26, 1);
}

.green {
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 8rpx;
	padding: 5rpx 0;
	margin: 10rpx 0 0;
	font-size: 20rpx;
	color: rgba(72, 199, 139, 1);
	border: 2rpx solid rgba(72, 199, 139, 1);
}

.btn-group{
	position: absolute;
	bottom: -40rpx;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 80rpx;
}

.btn-group text{
	display: flex;
	align-items: center;
	justify-content: center;
	width: 400rpx;
	height: 80rpx;
	border-radius: 40rpx;
	font-size: 32rpx;
	color: rgba(43, 34, 24, 1);
	background-color: rgba(255, 201, 25, 1);
}

.close-warrp {
	position: absolute;
	bottom: -24rpx;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 58rpx;
}
