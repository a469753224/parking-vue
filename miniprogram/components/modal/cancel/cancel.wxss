.overlay {
	position: fixed;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100vw;
	height: 100vh;
	background-color: rgba(0, 0, 0, .3);
}

.container {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	width: 606rpx;
	border-radius: 20rpx;
	padding: 40rpx 24rpx 24rpx;
	box-sizing: border-box;
	background-color: rgb(255,255,255);
	animation-name: overlay;
	animation-duration: .2s;
}

@keyframes overlay {
	0% {
		transform: scale(.8);
	}
	100% {
		transform: scale(1);
	}
}

.title {
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
}

.content {
	font-size: 28rpx;
	color: rgba(153, 153, 153, 1);
	padding: 40rpx 0;
}

.btn-group {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 230rpx;
	height: 80rpx;
	font-size: 28rpx;
	border-radius: 10rpx;
	margin: 0 10rpx;
}

.btn.confirm {
	color: rgba(44, 34, 24, 1);
	background-color: rgba(255, 201, 26, 1);
}

.btn.cancel {
	color: rgba(0,0,0);
	background-color: rgba(220,220,220);
}