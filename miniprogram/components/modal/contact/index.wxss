/* components/modal/contact/index.wxss */

.contact {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 7777;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,.3);
}

.container {
    width: 606rpx;
    height: 308rpx;
    border-radius: 20rpx;
    padding: 24rpx;
    box-sizing: border-box;
    background-color: rgb(255,255,255);
}

.title {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: rgba(51, 51, 51, 1);
    margin: 16rpx 0 40rpx;
}

.tips {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
}

.btn-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    margin: 40rpx 0 0;
}

.btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 268rpx;
    height: 80rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: rgba(44, 34, 24, 1);
}

.cancel {
    background-color: rgba(245, 245, 245, 1);
}

.confirm {
    background-color: rgba(255, 201, 26, 1);
}