.timeout {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 77777;
    display: flex;
    justify-content: center;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,.3);
}

.timeout-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 606rpx;
    height: 594rpx;
    border-radius: 20rpx;
    margin: 356rpx 72rpx 0;
    background-color: rgb(255,255,255);
}

.clock {
    width: 100%;
    height: 206rpx;
}

.title {
    font-size: 32rpx;
    color: rgba(51, 51, 51, 1);
    margin: 40rpx 0;
}

.tips {
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
    padding: 0 24rpx;
}

.btn-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    padding: 0 24rpx;
    margin: 40rpx 0 24rpx;
